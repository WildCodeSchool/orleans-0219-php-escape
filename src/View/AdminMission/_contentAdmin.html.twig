<div class="row justify-content-center text-center">
    <a class="btn btn-warning mb-3" href="/AdminMission/add" role="button">Ajoutez une nouvelle mission</a>
    <table class="table text-light">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Mission</th>
            <th scope="col">Niveau</th>
            <th scope="col">Nombre de joueurs</th>
            <th scope="col">Editer la mission</th>
            <th scope="col">Supprimer la mission</th>
        </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td>{{ mission.id }}</td>
                <td><a href="" class="text-warning">{{ mission.title }}</a></td>
                <td>{{ mission.level }}</td>
                <td>de {{ mission.minplayers }} Ã  {{ mission.maxplayers }} joueurs</td>
                <td><a class="edit text-warning" href="/AdminMission/edit/{{ mission.id }}"><i class="fas fa-edit"></i></a></td>
                <td>
                <form action="/AdminMission/delete/{{ mission.id }}" method="POST" class="deleteForm">
                    <button class="edit text-warning bg-transparent border-0" href="/AdminMission/delete/"><i class="far fa-trash-alt"></i></button>
                </form>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>