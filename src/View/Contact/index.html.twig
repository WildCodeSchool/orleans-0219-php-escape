{% extends '/layoutVisitor.html.twig' %}

{% block content %}

    <section id="contactUs">

    <div id="contactForm" class="row justify-content-center">

        <h1>Contactez-nous</h1>

        {% if mailSent is not empty %}
            <div class="mailSent">{{ mailSent }}</div>
        {% endif %}
        {% if mailNotSent is not empty %}
            <div class="mailNotSent">{{ mailNotSent }}</div>
        {% endif %}

        <div class="col-md-8">
            <form method="post" action="">
                <div class="form-row">
                    <div class="form-group col-sm-6">
                    <label for="lastName">Votre nom est obligatoire</label>
                    {% if errors.lastName is defined %}
                        <div class="formErrors">{{ errors.lastName }}</div>
                    {% endif %}
                    <input type="text" name="lastName" class="form-control" placeholder="Votre Nom" id="lastName" value="{{ values.lastName }}"
                           required>
                    </div>
                    <div class="form-group col-sm-6">
                    <label for="firstName">Votre prénom est obligatoire</label>
                    {% if errors.firstName is defined %}
                        <div class="formErrors">{{ errors.firstName }}</div>
                    {% endif %}
                    <input type="text" name="firstName" class="form-control" placeholder="Votre Prénom" id="firstName"
                           value="{{ values.firstName }}" required>
                    </div>
                </div>

                <div class="form-row">
                    <label for="email">Votre Email est obligatoire</label>
                    {% if errors.email is defined %}
                        <div class="formErrors">{{ errors.email }}</div>
                    {% endif %}
                    <input type="email" name="email" class="form-control" placeholder="Votre email" id="email" value="{{ values.email }}"
                           required>
                </div>
                <div class="form-row">
                    <label for="message">Quel est le sujet de votre message ? <span>(Pensez à vérifier la <a
                                    href="/Faq/index">FAQ</a>)</span></label>
                    {% if errors.message is defined %}
                        <div class="formErrors">{{ errors.message }}</div>
                    {% endif %}
                    <textarea class="form-control" placeholder="Votre message" id="message" name="message" rows="10"
                              required>{{ values.message }}</textarea>
                </div>
                <button type="submit" class="btn btn-warning">Envoyer</button>
            </form>
        </div>
    </div>

    <section id="adress">

        <h2>Où nous trouver?</h2>

        <div class="row">
            <div class="adresse col-lg-6">
                <h3>ESC'APE</h3>
                384 rue des Moulins</br>
                45750 Saint Pryvé Saint Mesmin</br>
                Tél. <span>06 58 78 61 73</span>
            </div>
            <div class="map col-lg-6 ">
                <iframe src="https://www.openstreetmap.org/export/embed.html?bbox=1.8451237678527834%2C47.872244723522954%2C1.858566999435425%2C47.87869261274586&amp;layer=mapnik&amp;marker=47.87546876843124%2C1.851845383644104"></iframe>
            </div>
        </div>
    </section>

{% endblock content %}